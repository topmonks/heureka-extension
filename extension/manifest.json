{
  "name": "Porovnání cen",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Ověřte si běžnou cenu produktu (uvedenou na Heureka) bez nutnosti opouštět prohlížený e-shop",
  "homepage_url": "https://github.com/topmonks/heureka-extension",
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "permissions": [
    "https://www.alza.cz/*",
    "https://api.heureka.cz/*",
    "https://www.alza.sk/*",
    "https://api.heureka.sk/*",
    "https://www.czc.cz/*",
    "https://www.datart.cz/*",
    "https://www.datart.sk/*",
    "https://www.kasa.cz/*",
    "https://www.lekarna.cz/*",
    "https://www.mall.cz/*",
    "https://www.mall.sk/*",
    "https://www.mironet.cz/*",
    "https://www.mountfield.cz/*",
    "https://www.mountfield.sk/*",
    "https://www.tsbohemia.cz/*",
    "https://www.alfa.cz/*",
    "https://www.ab-com.cz/*",
    "https://www.electroworld.cz/*",
    "https://www.softcom.cz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.alza.cz/*",
        "https://www.alza.sk/*",
        "https://www.czc.cz/*",
        "https://www.datart.cz/*",
        "https://www.datart.sk/*",
        "https://www.kasa.cz/*",
        "https://www.lekarna.cz/*",
        "https://www.mall.cz/*",
        "https://www.mall.sk/*",
        "https://www.mironet.cz/*",
        "https://www.mountfield.cz/*",
        "https://www.mountfield.sk/*",
        "https://www.tsbohemia.cz/*",
        "https://www.alfa.cz/*",
        "https://www.ab-com.cz/*",
        "https://www.electroworld.cz/*",
        "https://www.softcom.cz/*"
      ],
      "js": ["src/scrawler.js", "src/inject.js"],
      "css": ["src/inject.css"]
    }
  ]
}
